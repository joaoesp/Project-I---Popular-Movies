<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/black"
    tools:context="com.example.android.projecti_popularmovies.DetailActivityFragment">

    <TextView android:text="Title:" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:id="@+id/strTitle"
        android:textColor="@color/white"
        style="@style/TextAppearance.AppCompat.Title" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/poster"
        android:adjustViewBounds="true"
        android:maxWidth="130dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Here goes the title"
        android:id="@+id/title"
        android:textColor="@color/white"
        android:layout_below="@+id/strTitle"
        android:layout_alignLeft="@+id/strTitle"
        android:layout_alignStart="@+id/strTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plot Synopsis:"
        android:textStyle="bold"
        android:id="@+id/strPlot"
        android:textColor="@color/white"
        android:layout_marginTop="50dp"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_below="@+id/releaseDate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Here goes plot synopsis"
        android:id="@+id/plot"
        android:textColor="@color/white"
        android:layout_below="@+id/strPlot"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Rating:"
        android:textStyle="bold"
        android:id="@+id/strUserRating"
        android:textColor="@color/white"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_below="@+id/title"
        android:layout_alignLeft="@+id/title"
        android:layout_alignStart="@+id/title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Here goes user rating"
        android:textColor="@color/white"
        android:id="@+id/userRating"
        android:layout_below="@+id/strUserRating"
        android:layout_alignLeft="@+id/title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Release Date:"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:id="@+id/strReleaseDate"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_below="@+id/userRating"
        android:layout_alignLeft="@+id/title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Here goes release date"
        android:textColor="@color/white"
        android:id="@+id/releaseDate"
        android:layout_below="@+id/strReleaseDate"
        android:layout_alignLeft="@+id/title" />

</RelativeLayout>
